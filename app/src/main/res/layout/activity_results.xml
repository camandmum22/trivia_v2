<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ResultsActivity"
    android:background="@color/Primary_Green">

    <TextView
        android:text="@string/resueltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/txtBuenas"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="8"
        android:editable="false"
        android:textSize="30dp"
        android:id="@+id/editResueltas"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="8"
        android:editable="false"
        android:textSize="30dp"
        android:id="@+id/editGanados"
        android:layout_below="@+id/txtGanados"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="8"
        android:textSize="30dp"
        android:editable="false"
        android:id="@+id/editAcumulado"
        android:layout_below="@+id/txtAcumulado"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/puntaje_ganado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/txtGanados"
        android:layout_below="@+id/editResueltas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:text="@string/puntaje_acumulado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/txtAcumulado"
        android:layout_above="@+id/editGanados"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVolver"
        android:src="@drawable/refresh"
        android:onClick ="onVolverR"
        android:background="@color/Primary_Dark"
        android:elevation="12dp"
        android:backgroundTintMode="src_in"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtAcumulado"
        android:layout_alignEnd="@+id/txtAcumulado" />

</RelativeLayout>
