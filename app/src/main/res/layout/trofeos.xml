<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@color/Primary_Dark"
    tools:context=".TrophiesActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro1"
                android:layout_column="2"
                android:src="@drawable/trofeo1"
                android:layout_gravity="bottom|center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro2"
                android:layout_column="2"
                android:src="@drawable/trofeo2"
                android:layout_gravity="bottom|center_horizontal" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro3"
                android:layout_column="2"
                android:src="@drawable/trofeo3"
                android:layout_gravity="bottom|center_horizontal" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro4"
                android:layout_column="2"
                android:src="@drawable/trofeo4"
                android:layout_gravity="bottom|center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro5"
                android:layout_column="2"
                android:src="@drawable/trofeo5"
                android:layout_gravity="bottom|center_horizontal" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro6"
                android:layout_column="2"
                android:src="@drawable/trofeo6"
                android:layout_gravity="bottom|center_horizontal" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro7"
                android:layout_column="2"
                android:src="@drawable/trofeo7"
                android:layout_gravity="bottom|center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro8"
                android:layout_column="2"
                android:src="@drawable/trofeo8"
                android:layout_gravity="bottom|center_horizontal" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/butTro9"
                android:layout_column="2"
                android:src="@drawable/trofeo9"
                android:layout_gravity="bottom|center_horizontal" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus Trofeos"
        android:id="@+id/txtTusTrofeos"
        android:textColor="@color/Primary_text"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


